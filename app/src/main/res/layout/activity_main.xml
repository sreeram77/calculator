<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.sreeram.calculator.MainActivity">


    <TextView
        android:text="0.0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="60sp"
        android:textStyle="normal|bold"
        android:textAlignment="textEnd"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="sans-serif-condensed" />

    <Button
        android:text="9"
        android:id="@+id/button3"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button8" />

    <Button
        android:text="8"
        android:id="@+id/button5"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        app:layout_constraintBottom_toTopOf="@+id/button7" />

    <Button
        android:text="7"
        android:id="@+id/button4"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button6" />

    <Button
        android:text="4"
        android:id="@+id/button6"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button" />

    <Button
        android:text="5"
        android:id="@+id/button7"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        app:layout_constraintBottom_toTopOf="@+id/button2" />

    <Button
        android:text="6"
        android:id="@+id/button8"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        app:layout_constraintBottom_toTopOf="@+id/button9" />

    <Button
        android:text="1"
        android:id="@+id/button"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button10" />

    <Button
        android:text="2"
        android:id="@+id/button2"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button11"
        app:layout_constraintLeft_toRightOf="@+id/button" />

    <Button
        android:text="3"
        android:id="@+id/button9"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button12"
        app:layout_constraintLeft_toRightOf="@+id/button2" />

    <Button
        android:text="."
        android:id="@+id/button10"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold" />

    <Button
        android:text="0"
        android:id="@+id/button11"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button10" />

    <Button
        android:text="="
        android:id="@+id/button12"
        app:layout_constraintLeft_toRightOf="@+id/button11"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold" />

    <Button
        android:text="DEL"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/button14"
        android:background="?attr/selectableItemBackground"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button15" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/button15"
        app:layout_constraintRight_toRightOf="parent"
        android:background="?attr/selectableItemBackground"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button16" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/button16"
        android:background="?attr/selectableItemBackground"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button17" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/button17"
        app:layout_constraintRight_toRightOf="parent"
        android:background="?attr/selectableItemBackground"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button18" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/button18"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>
